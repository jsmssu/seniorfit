<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/settingbmi_bmicolor"
        android:layout_height="wrap_content">
        <Space 
            android:layout_width="match_parent"
            android:layout_height="92dp"
            />
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:src="@drawable/setting_icn_bmi_person"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="23.88(과체중)"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/settingbmi_bmitext"/>
        <Space 
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="16dp" >

        <LinearLayout
            android:id="@+id/settingbmi_agebox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/setting_bg_line"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="나이"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="비밀"
                android:id="@+id/settingbmi_age"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:src="@drawable/setting_icn_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingbmi_sexbox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/setting_bg_line"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="성별"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="비밀"
                android:id="@+id/settingbmi_sex"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:src="@drawable/setting_icn_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingbmi_heightbox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/setting_bg_line"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="키"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="비밀cm"
                android:id="@+id/settingbmi_height"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:src="@drawable/setting_icn_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingbmi_weightbox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="몸무게"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="비밀kg"
                android:id="@+id/settingbmi_weight"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:src="@drawable/setting_icn_next" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>