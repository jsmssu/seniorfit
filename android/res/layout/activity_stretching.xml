<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="#ffffff">

    <ImageView
        android:id="@+id/stretcing_startmyworkingout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:src="@drawable/stretching_timer_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="#000000">

        <Space 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/stretcing_otherprogram"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center_vertical"
            android:background="@drawable/stretching_other_program"/>
		<Space 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
		<ImageView 
		    android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/stretching_line"
		    />
		<Space 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/stretcing_chooseprogram"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" 
            android:layout_gravity="center_vertical"
            android:background="@drawable/stretching_other_workout"
            android:gravity="center"/>
        <Space 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
